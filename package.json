{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A URL Shortener with authentication, analytics, background jobs, and caching.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "compose:dev": "docker compose -f docker-compose.dev.yml up --build --force-recreate -V api",
    "compose:prod": "docker compose up --build",
    "compose:down": "docker compose down",
    "logs:api": "docker compose logs api",
    "debug": "docker compose run --rm api sh"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.5",
    "@types/rate-limit-redis": "^1.7.4",
    "amqplib": "^0.10.9",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "mongoose": "^8.19.2",
    "pino": "^9.2.0",
    "prettier": "^3.6.2",
    "rate-limit-redis": "^4.3.0",
    "redis": "^5.9.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/amqplib": "0.10.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "pino-pretty": "^11.2.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.46.3"
  }
}